<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/match_wrap">

    <androidx.cardview.widget.CardView
        style="@style/match_wrap.mrg10"
        app:cardElevation="2dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor = "@color/colorPrimary"
        >

        <LinearLayout
            style="@style/match_wrap.mrg10"
            android:orientation="vertical">

            <LinearLayout
                style="@style/match_wrap.horizontal"
                >

                <TextView
                    style="@style/TextViewTampil.Bold"
                    android:text="Id"
                    />

                <TextView
                    style="@style/TextViewTampil.TextViewTidakTampil"
                    android:id="@+id/tvId"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap.horizontal"
                >

                <TextView
                    style="@style/TextViewTampil.Bold"
                    android:text="Title"
                    />

                <TextView
                    style="@style/TextViewTampil.TextViewTidakTampil"
                    android:id="@+id/tvTitle"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap.horizontal"
                >

                <TextView
                    style="@style/TextViewTampil.Bold"
                    android:text="Nama"
                    />

                <TextView
                    style="@style/TextViewTampil.TextViewTidakTampil"
                    android:id="@+id/tvNama"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap.horizontal"
                >

                <TextView
                    style="@style/TextViewTampil.Bold"
                    android:text="Note"
                    />

                <TextView
                    style="@style/TextViewTampil.TextViewTidakTampil"
                    android:id="@+id/tvNote"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>