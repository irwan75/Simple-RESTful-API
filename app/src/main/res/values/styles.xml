<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTampil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewTampil.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="TextViewTampil.TextViewTidakTampil">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap.mrg10">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="match_wrap.horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
